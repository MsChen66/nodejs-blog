        <div class="update">
            <p>
                <span>用户id：</span>
                <input type="text" value="<%= data._id%>" readonly="readonly" id="id">
            </p>
            <p>
                <span>用户名：</span>
                <input type="text" value="<%= data.username%>" id="uname">
            </p>
            <p>
                <span>密码：</span>
                <input type="text" value="<%= data.password%>" id="psd">
            </p>
            <p>
                <span>注册时间：</span>
                <input type="text" value="<%= data.time%>" id="time">
            </p>
            <div class="sub">
                <input type="submit" value="修改" id="btn">
                <a href="/admin/users">返回</a>
            </div>
        </div>
