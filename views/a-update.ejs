</div>
</div>
<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/jquery.min.js"></script>
<script>
    $('#btn').click(function () {
        console.log(1);
        $.ajax({
            url: '/admin/api-update',
            type: 'post',
            data: {
                uname: $('#uname').val(),
                psd: $('#psd').val(),
                time:$('#time').val(),
                id:$('#id').val()
            },
            success: function (res) {
                console.log(res);
                if (res.code == 1) {
                    alert(res.msg)
                    location.href = '/admin/users';
                } else {
                    alert(res.msg)
                }
            },
            error: function (error) {
                console.log(error);
            }
        })
    })
</script>
